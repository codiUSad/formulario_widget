  <title>Formulario de Puntuación</title>
  <script>
    function calcularPuntuacion() {
      var puntuacion = 0;
      var respuestas = document.getElementsByTagName('input');
      for (var i = 0; i < respuestas.length; i++) {
        if (respuestas[i].type === 'radio' && respuestas[i].checked) {
          puntuacion += parseInt(respuestas[i].value);
        }
      }
      document.getElementById('resultado').textContent = 'Tu puntuación total es: ' + puntuacion;
    }
  </script>
</head>
